{
  "name": "im-discord-bot",
  "version": "0.2.0",
  "description": "Elegant, efficient, modular Discord bot (TypeScript + discord.js v14)",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "register": "tsx scripts/register-commands.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@discordjs/rest": "^2.3.0",
    "@discordjs/voice": "^0.17.0",
    "@napi-rs/canvas": "^0.1.77",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "ffmpeg-static": "^5.2.0",
    "pino": "^9.4.0",
    "pino-pretty": "^13.1.1",
    "play-dl": "^1.9.7",
    "prism-media": "^1.3.5",
    "spotify-web-api-node": "^5.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^22.5.4",
    "@types/spotify-web-api-node": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
